{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext", // Mude de CommonJS para NodeNext
        "moduleResolution": "NodeNext", // Adicione esta linha
        "lib": ["ESNext", "DOM"],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },

    "include": [
        "./src"
    ]
}